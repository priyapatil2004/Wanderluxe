<% layout("/layouts/boilerplate") %>

<style>
  .login-container {
    margin-top: 60px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .login-container h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #343a40;
    font-weight: bold;
  }

  .form-label {
    font-weight: 500;
  }

  .form-control::placeholder {
    color: #aaa;
    font-size: 0.9rem;
  }

  .btn-success {
    width: 100%;
    background-color: #00a884;
    border: none;
  }

  .btn-success:hover {
    background-color: #019272;
  }

  .form-footer {
    text-align: center;
    margin-top: 15px;
    font-size: 0.9rem;
  }

  .form-footer a {
    text-decoration: none;
    color: #00a884;
  }

  .form-footer a:hover {
    text-decoration: underline;
  }
</style>

<div class="login-container">
  <h2>Login to WanderLuxe</h2>

  <form action="/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        placeholder="Enter your username"
        required
      >
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control"
        placeholder="Enter your password"
        required
      >
    </div>

    <button class="btn btn-success">Login</button>
  </form>

  <div class="form-footer">
    Don't have an account? <a href="/signup">Sign up here</a>
  </div>
</div>
