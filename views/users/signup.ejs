<% layout("/layouts/boilerplate") %>

<style>
  .signup-container {
    margin-top: 60px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .signup-container h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #343a40;
    font-weight: bold;
  }

  .form-label {
    font-weight: 500;
  }

  .form-control::placeholder {
    color: #aaa;
    font-size: 0.9rem;
  }

  .btn-success {
    width: 100%;
    background-color: #00a884;
    border: none;
  }

  .btn-success:hover {
    background-color: #019272;
  }

  .form-footer {
    text-align: center;
    margin-top: 15px;
    font-size: 0.9rem;
  }

  .form-footer a {
    text-decoration: none;
    color: #00a884;
  }

  .form-footer a:hover {
    text-decoration: underline;
  }
</style>

<div class="signup-container">
  <h2>Sign Up on WanderLuxe</h2>

  <form action="/signup" method="POST">
    <div class="mb-3">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        placeholder="Enter your username"
        required
      />
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter your email"
        required
      />
    </div>

    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      />
    </div>

    <button type="submit" class="btn btn-success">Sign Up</button>
  </form>

  <div class="form-footer">
    Already have an account? <a href="/login">Login here</a>
  </div>
</div>
